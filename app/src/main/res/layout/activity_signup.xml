<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Beige"
    android:orientation="vertical"
    tools:context=".signup"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="32dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="106dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Create an account"/>
                <ImageButton
                    android:id="@+id/cancelimg"
                    android:background="@color/Beige"
                    android:contentDescription="cancel_bottom"
                    android:layout_width="48dp"
                    android:contextClickable="true"
                    android:clickable="true"
                    android:layout_height="48dp"
                    android:src="@drawable/cancel"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="First name"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstname"
                android:hint="firstname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:contentDescription="firstname"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="38dp"
                android:background="@drawable/textbox"/>

            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Create Username"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:hint="username"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:contentDescription="username"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="38dp"
                android:background="@drawable/textbox"/>

            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Create Password"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:hint="password"
                android:id="@+id/createpassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:contentDescription="create password "
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="38dp"
                android:background="@drawable/textbox"/>

            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Confirm Password"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmpassword"
                android:hint="Confirm Password"
                android:layout_width="match_parent"
                android:contentDescription="password goes here"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="38dp"
                android:background="@drawable/textbox"/>

            <TextView
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:hint="email"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:contentDescription="Email goes here"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="38dp"
                android:background="@drawable/textbox"/>

            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="39dp"
                android:layout_height="wrap_content"
                android:layout_width="380dp"
                android:text="By signing up, you agree to use the app for personal budgeting. We may collect and protect your data. Misuse may lead to account suspension. See Privacy Policy for details."
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="21dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/agreeCheckBox"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>
                </LinearLayout>
                <TextView
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="I agree with the Terms and Conditions"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginbtn"
                    android:textColor="@color/white"
                    android:layout_width="110dp"
                    android:layout_height="48dp"
                    android:text="Sign up"
                    android:layout_marginBottom="80dp"
                    android:textAllCaps="false"
                    android:background="@drawable/buttons"/>
                <ImageView
                    android:id="@+id/loadingImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rpaw"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
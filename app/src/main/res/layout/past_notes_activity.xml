<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/parchment">

    <!-- Top Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_layer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Note"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/notesContainer">

            <!-- Note 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/textbox"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/noteTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A Great Day at the Park"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/noteDate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="March 15, 2024"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/notePreview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today was absolutely wonderful! The weather was perfect for a walk in the park. My dog Max enjoyed chasing squirrels and meeting other dogs..."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Note 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/textbox"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/noteTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vet Visit Results"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/noteDate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="March 10, 2024"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/notePreview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Took Luna for her annual checkup. The vet said she's in excellent health! Her weight is perfect and all vaccinations are up to date..."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Note 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/textbox"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/noteTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Training Progress"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/noteDate3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="March 5, 2024"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/notePreview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Started teaching Buddy the 'stay' command. He's making good progress but gets distracted easily. Need to practice in quieter environments..."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Note 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/textbox"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/noteTitle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorite Memory"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/noteDate4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="February 28, 2024"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/notePreview4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remember when we first brought Charlie home? He was so small and shy. Now he runs the house! Such amazing growth in just one year..."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Empty State (commented out, for when there are no notes) -->
            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/emptyState">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No notes yet"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your past journal entries will appear here"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            -->

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/profilebtn"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/profile"
                    android:contentDescription="Navigate to profile screen"
                    android:importantForAccessibility="yes" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:layout_weight="2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/home"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/home"
                    android:contentDescription="Navigate to home screen"
                    android:importantForAccessibility="yes" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/journalNav"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/settings"
                    android:contextClickable="true"
                    android:contentDescription="Navigate to journal screen"
                    android:importantForAccessibility="yes" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>